<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/zm_video_effects_tab_panel_bg"
    android:padding="@dimen/zm_padding_smallest_minus_minus_size">

    <TextView
        android:id="@+id/tabItemBackgrounds"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/zm_btn_width_48dp"
        android:minHeight="@dimen/zm_btn_width_48dp"
        android:background="@drawable/zm_video_effects_tab_item_bg_selected"
        android:gravity="center"
        android:paddingStart="@dimen/zm_padding_smallest_size"
        android:paddingTop="@dimen/zm_padding_smaller_size"
        android:paddingEnd="@dimen/zm_padding_smallest_size"
        android:paddingBottom="@dimen/zm_padding_smaller_size"
        android:text="@string/zm_video_effects_tab_item_background_210764"
        android:textColor="@color/zm_v1_white_500"
        android:textSize="@dimen/zm_ui_kit_text_size_13sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tabItemFilters"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tabItemFilters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/zm_btn_width_48dp"
        android:minHeight="@dimen/zm_btn_width_48dp"
        android:background="@drawable/zm_video_effects_tab_item_bg_normal"
        android:gravity="center"
        android:paddingStart="@dimen/zm_padding_smallest_size"
        android:paddingTop="@dimen/zm_padding_smaller_size"
        android:paddingEnd="@dimen/zm_padding_smallest_size"
        android:paddingBottom="@dimen/zm_padding_smaller_size"
        android:text="@string/zm_video_effects_tab_item_filters_210764"
        android:textColor="@color/zm_v1_white_alpha54"
        android:textSize="@dimen/zm_ui_kit_text_size_13sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tabItemEffects"
        app:layout_constraintStart_toEndOf="@id/tabItemBackgrounds"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tabItemEffects"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/zm_video_effects_tab_item_bg_normal"
        android:gravity="center"
        android:paddingStart="@dimen/zm_padding_smallest_size"
        android:paddingTop="@dimen/zm_padding_smaller_size"
        android:paddingEnd="@dimen/zm_padding_smallest_size"
        android:paddingBottom="@dimen/zm_padding_smaller_size"
        android:text="@string/zm_video_effects_tab_item_effects_210764"
        android:textColor="@color/zm_v1_white_alpha54"
        android:textSize="@dimen/zm_ui_kit_text_size_13sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tabItemFilters"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>