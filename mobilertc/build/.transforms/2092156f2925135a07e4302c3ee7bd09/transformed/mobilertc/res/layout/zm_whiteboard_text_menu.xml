<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/zm_whiteboard_common_toolbar_bg"
    android:orientation="horizontal"
    android:padding="@dimen/zm_cloud_whiteboard_menu_bar_icon_margin">


    <ImageView
        android:id="@+id/ivBold"
        android:layout_width="@dimen/zm_cloud_whiteboard_menu_bar_icon_size"
        android:layout_height="@dimen/zm_cloud_whiteboard_menu_bar_icon_size"
        android:contentDescription="@string/zm_whiteboard_accessibility_bold_289013"
        android:src="@drawable/zm_whiteboard_note_bold_selector" />

    <ImageView
        android:id="@+id/ivItalic"
        android:layout_width="@dimen/zm_cloud_whiteboard_menu_bar_icon_size"
        android:layout_height="@dimen/zm_cloud_whiteboard_menu_bar_icon_size"
        android:layout_marginStart="@dimen/zm_cloud_whiteboard_menu_bar_icon_margin"
        android:contentDescription="@string/zm_whiteboard_accessibility_italic_289013"
        android:src="@drawable/zm_whiteboard_note_italic_selector" />

    <ImageView
        android:id="@+id/ivUnderLine"
        android:layout_width="@dimen/zm_cloud_whiteboard_menu_bar_icon_size"
        android:layout_height="@dimen/zm_cloud_whiteboard_menu_bar_icon_size"
        android:layout_marginStart="@dimen/zm_cloud_whiteboard_menu_bar_icon_margin"
        android:contentDescription="@string/zm_whiteboard_accessibility_underline_289013"
        android:src="@drawable/zm_whiteboard_note_underline_selector" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/zm_cloud_whiteboard_menu_bar_icon_margin"
        android:background="@drawable/zm_ic_whiteboard_divider_vertical" />

    <ImageView
        android:id="@+id/ivAlign"
        android:layout_width="@dimen/zm_cloud_whiteboard_menu_bar_icon_size"
        android:layout_height="@dimen/zm_cloud_whiteboard_menu_bar_icon_size"
        android:layout_marginStart="@dimen/zm_cloud_whiteboard_menu_bar_icon_margin"
        android:contentDescription="@string/zm_whiteboard_accessibility_text_align_289013"
        android:src="@drawable/zm_whiteboard_note_align_left_selector" />

    <TextView
        android:id="@+id/tvSize"
        android:layout_width="@dimen/zm_cloud_whiteboard_menu_bar_icon_size"
        android:layout_height="@dimen/zm_cloud_whiteboard_menu_bar_icon_size"
        android:layout_marginStart="@dimen/zm_cloud_whiteboard_menu_bar_icon_margin"
        android:background="@drawable/zm_whiteboard_popup_null_selector"
        android:contentDescription="@string/zm_whiteboard_accessibility_text_size_289013"
        android:gravity="center"
        android:textColor="@color/zm_v2_whiteboard_text_black"
        android:textSize="@dimen/zm_font_small_size"
        android:textStyle="bold"
        tools:text="16" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/zm_cloud_whiteboard_menu_bar_icon_margin"
        android:background="@drawable/zm_ic_whiteboard_divider_vertical" />

    <ImageView
        android:id="@+id/ivColor"
        android:layout_width="@dimen/zm_cloud_whiteboard_menu_bar_icon_size"
        android:layout_height="@dimen/zm_cloud_whiteboard_menu_bar_icon_size"
        android:layout_marginStart="@dimen/zm_cloud_whiteboard_menu_bar_icon_margin"
        android:contentDescription="@string/zm_whiteboard_accessibility_color_289013"
        android:src="@drawable/zm_whiteboard_note_color_yellow_selector" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/zm_cloud_whiteboard_menu_bar_icon_margin"
        android:background="@drawable/zm_ic_whiteboard_divider_vertical" />

    <ImageView
        android:id="@+id/ivMore"
        android:layout_width="@dimen/zm_cloud_whiteboard_menu_bar_icon_size"
        android:layout_height="@dimen/zm_cloud_whiteboard_menu_bar_icon_size"
        android:layout_marginStart="@dimen/zm_cloud_whiteboard_menu_bar_icon_margin"
        android:contentDescription="@string/zm_whiteboard_accessibility_more_289013"
        android:src="@drawable/zm_whiteboard_popup_more_selector" />
</LinearLayout>