<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/zm_v2_personal_note_reminder_bg"
    android:visibility="visible"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtReminder"
        style="@style/ZmTextView.Content.Primary.Medium"
        android:maxLines="@integer/large_lines"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/zm_margin_smaller_size"
        android:layout_marginLeft="@dimen/zm_margin_smaller_size"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/zm_margin_smaller_size"
        android:layout_marginBottom="@dimen/zm_margin_smaller_size"
        android:gravity="left"
        tools:text="Your personal note is active from 12:00 AM to 9:00 PM" />

    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/zm_btn_width_48dp"
        android:minHeight="@dimen/zm_btn_width_48dp"
        android:layout_marginRight="@dimen/zm_margin_smaller_size"
        android:contentDescription="@string/zm_btn_close"
        android:padding="@dimen/zm_padding_smaller_size"
        android:src="@drawable/zm_ic_btn_close" />
</LinearLayout>