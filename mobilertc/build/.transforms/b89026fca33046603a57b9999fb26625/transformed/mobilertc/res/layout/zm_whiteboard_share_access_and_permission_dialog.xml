<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zoom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zm_whiteboard_share_dialog_bg"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/ZMTitleBar"
        android:background="@color/zm_white">

        <ImageButton
            android:id="@+id/btnClose"
            style="@style/ZmBackButton"
            android:contentDescription="@string/zm_btn_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtTitle"
            style="@style/ZmTitleBarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/zm_whiteboard_share_dialog_acces_and_permission_back_title_289013"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/btnClose"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnSave"
            style="@style/ZmTitleBarAction"
            android:text="@string/zm_wb_share_save_289013"
            android:textSize="@dimen/zm_font_normal_size"
            android:contentDescription="@string/zm_wb_share_setting_acc_289013"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/zm_whiteboard_share_dialog_bg"
            android:orientation="vertical">

            <TextView
                style="@style/ZmSettingOptionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/zm_margin_medium_size"
                android:text="@string/zm_whiteboard_share_dialog_who_can_access_header_289013" />

            <us.zoom.androidlib.widget.ZMSettingsCategory
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:zm_showBottomDivider="false"
                app:zm_showTopDivider="false">

                <LinearLayout
                    android:id="@+id/llInvitedOnly"
                    style="@style/ZmSettingItem.UnClick">

                    <TextView
                        style="@style/ZmSettingItemTitle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/zm_wb_share_dialog_acces_and_permission_invited_only_289013" />


                    <ImageView
                        android:id="@+id/ivInvitedOnlyCheck"
                        style="@style/ZmSettingItemArrow"
                        android:src="@drawable/zm_ic_whiteboard_right_blue"
                        android:visibility="gone"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llMyOrg"
                    style="@style/ZmSettingItem.UnClick">

                    <TextView
                        android:id="@+id/txt_my_org"
                        style="@style/ZmSettingItemTitle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/zm_wb_share_dialog_acces_and_permission_my_org_name_289013" />


                    <ImageView
                        android:id="@+id/ivMyOrg"
                        style="@style/ZmSettingItemArrow"
                        android:src="@drawable/zm_ic_whiteboard_right_blue"
                        android:visibility="gone"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llAnyoneAtZoom"
                    style="@style/ZmSettingItem.UnClick">

                    <TextView
                        style="@style/ZmSettingItemTitle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/zm_wb_share_dialog_acces_and_permission_anyone_at_289013" />


                    <ImageView
                        android:id="@+id/ivAnyoneAtZoomCheck"
                        style="@style/ZmSettingItemArrow"
                        android:src="@drawable/zm_ic_whiteboard_right_blue"
                        android:visibility="gone"
                        tools:ignore="ContentDescription" />
                </LinearLayout>




            </us.zoom.androidlib.widget.ZMSettingsCategory>

            <TextView
                android:id="@+id/txt_label"
                style="@style/ZmSettingOptionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/zm_margin_medium_size"
                android:text="@string/zm_whiteboard_share_dialog_acces_and_permission_with_the_permission_header_289013" />

            <us.zoom.androidlib.widget.ZMSettingsCategory
                android:id="@+id/layout_access"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:zm_showBottomDivider="false"
                app:zm_showTopDivider="false">


                <LinearLayout
                    android:id="@+id/llEditor"
                    style="@style/ZmSettingItem.UnClick">

                    <TextView
                        style="@style/ZmSettingItemTitle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/zm_whiteboard_share_dialog_permission_editor_289013" />


                    <ImageView
                        android:id="@+id/ivEditorCheck"
                        style="@style/ZmSettingItemArrow"
                        android:src="@drawable/zm_ic_whiteboard_right_blue"
                        android:visibility="gone"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCommentor"
                    style="@style/ZmSettingItem.UnClick">

                    <TextView
                        style="@style/ZmSettingItemTitle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/zm_whiteboard_share_dialog_permission_commenter_289013" />


                    <ImageView
                        android:id="@+id/ivCommentorCheck"
                        style="@style/ZmSettingItemArrow"
                        android:src="@drawable/zm_ic_whiteboard_right_blue"
                        android:visibility="gone"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llViewer"
                    style="@style/ZmSettingItem.UnClick">

                    <TextView
                        style="@style/ZmSettingItemTitle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/zm_whiteboard_share_dialog_permission_viewer_289013" />


                    <ImageView
                        android:id="@+id/ivViewerCheck"
                        style="@style/ZmSettingItemArrow"
                        android:src="@drawable/zm_ic_whiteboard_right_blue"
                        android:visibility="gone"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

            </us.zoom.androidlib.widget.ZMSettingsCategory>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/flLoading"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:focusable="true"
            android:clickable="true">

            <ProgressBar
                android:layout_width="@dimen/zm_margin_normal_size"
                android:layout_height="@dimen/zm_margin_normal_size"
                android:layout_gravity="center"
                android:indeterminateDrawable="@drawable/zm_whiteboard_loading"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtSipError"
                app:layout_constraintTop_toTopOf="parent" />

        </FrameLayout>
    </FrameLayout>
</LinearLayout>