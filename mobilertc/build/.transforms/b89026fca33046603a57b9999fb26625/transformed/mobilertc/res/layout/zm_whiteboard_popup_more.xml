<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/zm_whiteboard_common_toolbar_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llImport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/zm_cloud_whiteboard_menu_bar_icon_margin">

        <TextView
            style="@style/ZmTextView.Content.Primary.Medium"
            android:layout_width="@dimen/zm_cloud_whiteboard_menu_bar_more_popup_width"
            android:layout_height="@dimen/zm_cloud_whiteboard_menu_bar_text_size_popup_height"
            android:gravity="center_vertical"
            android:text="@string/zm_whiteborad_export_289013" />

        <ImageView
            style="@style/ZmSettingItemArrow"
            tools:ignore="ContentDescription"
            android:focusable="false"
            android:clickable="false"
            android:layout_gravity="center_vertical"
            android:src="@drawable/zm_ic_whiteboard_share_arrow_right"
            android:visibility="gone"
            tools:visibility="visible" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/zm_cloud_whiteboard_menu_bar_icon_margin">

        <TextView
            style="@style/ZmTextView.Content.Primary.Medium"
            android:layout_width="@dimen/zm_cloud_whiteboard_menu_bar_more_popup_width"
            android:layout_height="@dimen/zm_cloud_whiteboard_menu_bar_text_size_popup_height"
            android:gravity="center_vertical"
            android:text="@string/zm_whiteborad_feedback_289013" />

        <ImageView
            style="@style/ZmSettingItemArrow"
            android:clickable="false"
            android:focusable="false"
            tools:ignore="ContentDescription"
            android:layout_gravity="center_vertical"
            android:src="@drawable/zm_ic_whiteboard_share_arrow_right"
            android:visibility="gone"
            tools:visibility="visible" />


    </LinearLayout>

</LinearLayout>