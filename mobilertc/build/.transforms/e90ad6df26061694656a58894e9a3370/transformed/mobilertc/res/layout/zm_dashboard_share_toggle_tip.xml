<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/zmForceEnableSecurityPopView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/zm_force_tip_bg"
    android:elevation="@dimen/zm_margin_smaller_size">

    <RelativeLayout
        android:id="@+id/panelTipContent"
        android:layout_width="@dimen/zm_dashborad_share_toggle_tip_text_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/zm_margin_small"
        android:layout_marginTop="@dimen/zm_margin_small"
        android:layout_marginEnd="@dimen/zm_margin_small"
        android:background="@drawable/zm_force_tip_content_bg"
        android:elevation="@dimen/zm_margin_smaller_size">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/zm_padding_smaller_size"
            android:layout_marginTop="@dimen/zm_padding_smaller_size"
            android:layout_marginEnd="@dimen/zm_margin_smaller_size"
            android:layout_marginBottom="@dimen/zm_padding_smaller_size"
            android:gravity="start"
            android:maxLines="5"
            android:text="@string/zm_dashboard_setting_toggle_296308"
            android:textColor="@color/zm_v2_schedule_force_tip_text"
            android:textSize="@dimen/zm_margin_small_minus_size" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/panelTipContent"
        android:layout_alignEnd="@+id/panelTipContent"
        android:layout_marginEnd="@dimen/zm_margin_large_minus_size"
        android:elevation="@dimen/zm_margin_smaller_size"
        android:src="@drawable/zm_triangle_down"
        tools:ignore="ContentDescription" />
</RelativeLayout>
